# Maintainer: shivanandvp <shivanandvp@rebornos.org>

pkgname=calamares-configuration
pkgver=0.0.1
pkgrel=2
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
pkgdesc='Configuration for the Calamares installer.'
license=('GPL3')
depends=('paru-bin')
optdepends=('calamares-core')
makedepends=('rsync') 
provides=("${pkgname}")
conflicts=("${pkgname}")
source=()
replaces=('calamares-branding')

PROJECT_DIRECTORY="$(dirname -- "$(dirname -- "$(pwd)")")"
# BUILD_DIRECTORY="$PROJECT_DIRECTORY"/build
# RESOURCE_DIRECTORY="$PROJECT_DIRECTORY"/scripts/archlinux_packaging
# NUMBER_OF_PROCESSORS="$(nproc)"

prepare() {
    # rsync \
    #     --archive \
    #     --human-readable \
    #     --progress \
    #     --update \
    #     "$PROJECT_DIRECTORY"/* \
    #     "${srcdir}"
    :
}

package() {
    (   
        # Copy settings_online.conf and settings_offline.conf
        cd "$PROJECT_DIRECTORY" && \
        find . \
            -mindepth 1 \
            -maxdepth 1 \
            -type f \
            -name '*.conf' \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
        install -Dm 755 settings_online.conf "${pkgdir}"/etc/calamares/settings.conf # Start off by copying online settings as the default
    )
    (
        # Copy module specific configuration
        cd "$PROJECT_DIRECTORY" && \
        find modules \
            -type f \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
    )
    (
        # Copy QML files
        cd "$PROJECT_DIRECTORY" && \
        find qml \
            -type f \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
    )
    (
        # Copy images
        cd "$PROJECT_DIRECTORY" && \
        find images \
            -type f \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
    )
    (
        # Copy branding
        cd "$PROJECT_DIRECTORY" && \
        find branding \
            -type f \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
    )
}